# Limits for Docker Container
# For small instances (1GB RAM) use: 512M
# For standard settings use: 1024M
DOCKER_APP_MEM_LIMIT=1024

# Limits for  JVM 
# For small instances (1GB RAM) use: -Xms300m -Xmx300m -XX:+AlwaysPreTouch
# For standard settings use: -Xms512m -Xmx768m -XX:+AlwaysPreTouch
JAVA_OPTS=-Xms512m -Xmx768m -XX:+AlwaysPreTouch

# Limits for DB Connection Pool
# For small instances (1GB RAM) use: 3 and 5
# For standard settings use: 5 and 10 (or higher depending on traffic)
HIKARI_MIN_IDLE=5
HIKARI_MAX_POOL_SIZE=10

# --- DB ---
DB_NAME=postgres
DB_USERNAME=
DB_PASSWORD=

# Note: The database name at the end of the URL must match DB_NAME
DB_URL=jdbc:postgresql://db:5432/postgres

# --- ADMIN --- (Spring Security)
ADMIN_USERNAME=
# Use {noop}prefix for plain text passwords, or provide a BCrypt hash
ADMIN_PASSWORD={noop}your_password

# --- TELEGRAM ---
TG_USERNAME_BOT=example_username_bot
TG_BOT_TOKEN=
WEB_APP_URL=https://example.com

# --- MAPBOX ---
MAPBOX_ACCESS_TOKEN=

# --- TARIFFS ---
# Strategy options: DISTANCE_ONLY, DISTANCE_AND_TIME
FARE_CALCULATION_STRATEGY=DISTANCE_AND_TIME

# Base price for order (landing fee)
FARE_BASE=50.0

# Price per km/min of travel
FARE_PER_KM=20.0
FARE_PER_MIN=5.0

# Currency symbol or code (e.g., EUR, USD, or â‚¬)
FARE_CURRENCY=
